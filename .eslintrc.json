{
    "plugins": ["mocha"],
    "env": {
        "browser": true,
        "commonjs": false,
        "es2021": true,
        "es6":true
    },
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "space-before-blocks": ["error", "always"],
        "block-spacing": ["error", "always"],
        "object-curly-spacing": ["error", "always"],
        "arrow-parens": ["error", "always"],
        "arrow-body-style": ["error", "always"],
        "comma-spacing": ["error", { "after": true }],
        "arrow-spacing":"error",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
